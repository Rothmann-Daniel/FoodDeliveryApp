<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Order ID -->
        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Order #12345"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_order_status"/>

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/badge_pending"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Date -->
        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Nov 2024, 14:30"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_order_id"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_order_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Items count -->
        <TextView
            android:id="@+id/tv_items_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 items"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Total amount -->
        <TextView
            android:id="@+id/tv_order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$45.50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            app:layout_constraintTop_toTopOf="@id/tv_items_count"
            app:layout_constraintBottom_toBottomOf="@id/tv_items_count"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Delivery address -->
        <TextView
            android:id="@+id/tv_delivery_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="123 Main St, City"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_items_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Track button (только для активных заказов) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_track_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Track Order"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_delivery_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
