<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginUserActivity">

    <ImageView
        android:id="@+id/iv_logo_LUA"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_LUA"
        style="@style/tv_title_StartActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/basket_bite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo_LUA" />

    <TextView
        android:id="@+id/tv_description_LUA"
        style="@style/tv_description_SplashActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/delievery_favorite_food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_LUA" />

    <TextView
        android:id="@+id/tv_joinMoto_LUA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/yeonsung"
        android:text="@string/join_moto"
        android:textAllCaps="false"
        android:textColor="@color/red_startActivity"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_LUA" />

    <EditText
        android:id="@+id/ed_sing_in_Email_LUA"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ed_backgroud"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:elevation="4dp"
        android:ems="10"
        android:fontFamily="@font/yeonsung"
        android:hint="@string/hint_email_or_number"
        android:inputType="text"
        android:maxLines="1"
        android:outlineSpotShadowColor="@color/red_startActivity"
        android:paddingLeft="5dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_joinMoto_LUA" />

    <EditText
        android:id="@+id/ed_password_LUA"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ed_backgroud"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:elevation="4dp"
        android:ems="10"
        android:fontFamily="@font/yeonsung"
        android:hint="@string/hint_password"
        android:inputType="text"
        android:outlineSpotShadowColor="@color/red_startActivity"
        android:paddingLeft="5dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_sing_in_Email_LUA" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/yeonsung"
        android:text="or"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/ed_password_LUA"
        app:layout_constraintStart_toStartOf="@+id/ed_password_LUA"
        app:layout_constraintTop_toBottomOf="@+id/ed_password_LUA" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/yeonsung"
        android:text="Continue With"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_facebook_LUA"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_shape_lg"
        android:drawableLeft="@drawable/ic_facebook"
        android:drawablePadding="8dp"
        android:fontFamily="@font/yeonsung"
        android:gravity="center_vertical|start"
        android:paddingLeft="32dp"
        android:text="Facebook"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_google_LUA" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_google_LUA"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_shape_lg"
        android:drawableLeft="@drawable/ic_google_icon"
        android:drawablePadding="8dp"
        android:fontFamily="@font/yeonsung"
        android:gravity="center_vertical|start"
        android:paddingLeft="40dp"
        android:text="Google"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login_LUA"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_shape_lg"
        android:fontFamily="@font/yeonsung"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/btn_google_LUA"
        app:layout_constraintStart_toStartOf="@+id/btn_facebook_LUA"
        app:layout_constraintTop_toBottomOf="@+id/btn_facebook_LUA" />

    <TextView
        android:id="@+id/tv_question_LUA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Donâ€™t Have Account?"
        android:fontFamily="@font/yeonsung"
        app:layout_constraintEnd_toEndOf="@+id/btn_login_LUA"
        app:layout_constraintStart_toStartOf="@+id/btn_login_LUA"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_LUA" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Support"
        android:textColor="#AEAFB4"
        android:fontFamily="@font/yeonsung"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableLeft="@drawable/ic_support"
        android:gravity="center_vertical|start"/>
</androidx.constraintlayout.widget.ConstraintLayout>