<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Vertical line -->
    <View
        android:id="@+id/line_top"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/gray_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_step_indicator"
        app:layout_constraintStart_toStartOf="@id/iv_step_indicator"
        app:layout_constraintEnd_toEndOf="@id/iv_step_indicator"/>

    <!-- Step indicator -->
    <ImageView
        android:id="@+id/iv_step_indicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check_circle"
        app:tint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/line_top"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <View
        android:id="@+id/line_bottom"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@id/iv_step_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_step_indicator"
        app:layout_constraintEnd_toEndOf="@id/iv_step_indicator"/>

    <!-- Step info -->
    <TextView
        android:id="@+id/tv_step_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Order Confirmed"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/iv_step_indicator"
        app:layout_constraintStart_toEndOf="@id/iv_step_indicator"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_step_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="14:30"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_step_title"
        app:layout_constraintStart_toEndOf="@id/iv_step_indicator"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>