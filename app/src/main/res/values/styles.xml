<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen -->

    <!-- logo -->
    <style name="iv_logo_SplashActivity">
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginStart">88dp</item>
        <item name="android:layout_marginEnd">88dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:foregroundGravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">0.7</item>
    </style>
    <!-- title Splash Screen -->
    <style name="tv_title_SplashActivity">
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:fontFamily">@font/yeonsung</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">64sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- description Splash Screen -->
    <style name="tv_description_SplashActivity">
        <item name="android:fontFamily">@font/yeonsung</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- design Splash Screen -->
    <style name="tv_design">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">@font/yeonsung</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!-- Start Screen -->

    <!-- title Start Screen -->
    <style name="tv_title_StartActivity" parent="tv_title_SplashActivity">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/red_startActivity</item>
    </style>

    <!-- button Next Start Screen -->
    <style name="bt_next_StartActivity">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:fontFamily">@font/yeonsung</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:backgroundTint">@color/btn_next_startActivity</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Login Screen -->

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/ed_backgroud</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/yeonsung</item>
        <item name="android:outlineSpotShadowColor">@color/red_startActivity</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <!-- button Sign In/Sign Up -->

    <style name="btn_signInSignUp" parent="Widget.MaterialComponents.Button">
        <!-- Общие свойства -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/yeonsung</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>

        <!-- Для MaterialButton -->
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/btn_shape_lg</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <!-- Login -->
    <style name="btn_signInSignUp.login" parent="btn_signInSignUp">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Facebook  -->
    <style name="btn_signInSignUp.facebook">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:drawableStart">@drawable/ic_facebook</item>
    </style>

    <!-- Google  -->
    <style name="btn_signInSignUp.google">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:drawableStart">@drawable/ic_google_icon</item>
    </style>

    <!--Loccation-->
    <style name="ShapeAppearanceOverlay.CustomOutlineBox" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MyOutlineBox" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <!-- Menu -->
    <style name="DropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/red_startActivity</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CustomOutlineBox</item>
    </style>

    <!-- Menu description -->
    <style name="description_menu" parent="tv_description_SplashActivity">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:gravity">start</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!-- Menu text -->
    <style name="description_text_menu">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/yeonsung</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- SearchFragment -->

    <!-- SearchBar-->
    <style name="MySearchBarTextAppearance" parent="TextAppearance.Material3.SearchBar">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textColorHint">@color/blue_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/yeonsung</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="MySearchBarStyle" parent="Widget.Material3.SearchBar">
        <item name="android:textAppearance">@style/MySearchBarTextAppearance</item>
        <item name="iconTint">@color/blue_light</item>
        <item name="strokeColor">@color/blue_light</item>
        <item name="strokeWidth">1dp</item>
    </style>


</resources>